<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>

    <!--------------------------Navigation Bar-------------------------->
    <%- include('./partials/nav') %>
   <!-------------------------------Header------------------------------->
  <h1>Full Menu</h1>

   <!-------------------------------Sides------------------------------->
<h2>Sides</h2>
<hr>
<ol>
  <% menu.forEach(item => { %>
    <% if (item.category === 'sides') { %>
      <li>
        <h3><%= item.name %></h3>
        <ul>
          <li><b>Price:</b> <%= item.price %></li>
          <li><b>Rating:</b> <%= item.rating %> stars</li>
          <li><%= item.details %></li>
        </ul>
      </li>
    <% } %>
  <% }); %>
</ol>

  <!-------------------------------Mains------------------------------->
<h2>Mains</h2>
<hr>
<ol>
  <% menu.forEach(item => { %>
    <% if (item.category === 'mains') { %>
      <li>
        <h3><%= item.name %></h3>
        <ul>
        <li><b>Price:</b> <%= item.price %></li>
        <li><b>Rating:</b> <%= item.rating %> stars</li>
        <li><%= item.details %></li>
    </ul>
      </li>
    <% } %>
  <% }); %>
</ol>

  <!-------------------------------Desserts------------------------------->
<h2>Desserts</h2>
<hr>
<ol>
  <% menu.forEach(item => { %>
    <% if (item.category === 'desserts') { %>
      <li>
        <h3><%= item.name %></h3>
        <ul>
          <li><b>Price:</b> <%= item.price %></li>
          <li><b>Rating:</b><%= item.rating %> stars</li>
          <li><%= item.details %></li>
        </ul>
      </li>
    <% } %>
  <% }); %>
</ol>

</body>
</html>
